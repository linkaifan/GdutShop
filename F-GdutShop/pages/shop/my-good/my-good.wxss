/* pages/shop/my-good/my-good.wxss */
.me{
	position: relative;
	height: 257rpx;
}
.me-msg{
	height: 182rpx;
	border-bottom:1rpx solid rgba(0, 0, 0, 0.1);
	width: 688rpx;
	margin: 0 auto;
}
.avatarBox{
	width: 135rpx;
	height: 135rpx;
	border-radius: 50%;
	float: left;
	margin-top: 32rpx;
	margin-left: 10rpx;
	margin-right: 45rpx;
}
.avatar{
	width: 135rpx;
	height: 135rpx;
	border-radius: 50%;
}
.meText{
	padding-top: 45rpx;
	letter-spacing:1px;
}
.meText view:nth-child(2){
	margin-top: 19rpx;
	font-size: 14px;
	color: rgb(199, 199, 199);
}
.me navigator{
	font-size: 14px;
  	color: #41ae8e;
  	float: right;
  	margin:10rpx 32rpx;
}
.me navigator image{
	width: 23rpx;
	height: 23rpx;
}
.fenGe{
	height: 32rpx;
	background-color: #ecedf1;
}
.tabBtn{
	height: 90rpx;
	border-bottom:1rpx solid rgba(0, 0, 0, 0.1);
}
.tabBtn view{
	float: left;
	width: 50%;
	height: 100%;
	text-align: center;
	line-height: 90rpx;
	color: rgb(131, 131, 131);
}
.tabBtn .activeBtn{
	border-bottom:5rpx solid #41ae8e;
	color: black;
}
.my-good>view.item,
.my-like>view.item{
	box-sizing: border-box;
	height: 205rpx;
	width: 690rpx;
	margin: 0 auto;
	padding-top: 43rpx;
	padding-bottom: 24rpx;
	border-bottom:1rpx solid rgba(0, 0, 0, 0.1);
}
.my-good view::after{
	display: block;
	content: '';
	clear: both;
	height: 0;
	overflow: hidden;
}
.tabGoods .img,
.tabGoods .text,
.tabGoods .btn{
	float: left;
}
.tabGoods .img{
	background-color: #b4b4b4;
	margin-right: 30rpx;
}
.tabGoods .img,.tabGoods .img image{
	height: 140rpx;
	width: 140rpx;
}

.tabGoods .text{
	width: 320rpx;
	font-size: 14px;
}
.tabGoods .text view:nth-child(2){
	color: #e45555;
	margin: 18rpx 0;
	font-size: 13px;
}
.tabGoods .text view:nth-child(3){
	font-size: 12px;
	color: #b4b4b4;
}
.tabGoods .btn {
	width: 200rpx;
	position: relative;
	height: 100%;
}
.tabGoods .btn view{
	text-align: center;
	position: absolute;
	width: 88rpx;
	height: 48rpx;
	line-height: 48rpx;
	border: 1rpx solid black;
	font-size: 14px;
	bottom: 0;
}
.tabGoods .btn view:nth-child(1){
	left: 0;
}
.tabGoods .btn view:nth-child(2){
	right: 0;
}
.no-item{
	height: 600rpx;
	text-align: center;
	font-size: 15px;
	color: #c7c7c7;
}
.no-icon{
	padding-top: 115rpx;
	margin-bottom: 10rpx;
}
.no-icon image{
	width: 45rpx;
	height: 45rpx;
}
