/* pages/shop/common/good-box.wxss */
/*商品部分  */
.good{
    width: 100%;
    background: white;
}
.uploader{
    padding: 30rpx 30rpx 0 30rpx;
    display: flex;
    position: relative;
}
.avatarBox{
    width: 80rpx;
    height: 80rpx;
    background: #b4b4b4;
    border-radius: 6rpx;
}
.avatar{
    width: 100%;
    height: 100%;
    border-radius: 6rpx;
}
.upDet{
    padding-left: 20rpx;
    height: 80rpx;
}
.upNickname{
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
}
.upTime{
    height: 30rpx;
    line-height: 30rpx;
    font-size: 24rpx;
    color: #838383;
}
.price{
    position: absolute;
    right: 30rpx;
    font-size: 38rpx;
    color: #e45555;
}
.priceCur{
    font-size: 30rpx;
}

.goodName{
    margin: 30rpx 30rpx 0 30rpx;
    font-size: 30rpx;
    padding-left: 12rpx;
    border-left: 7rpx solid #41ae8e;
}
.goodDisc{
    padding: 30rpx 30rpx 0 30rpx;
    font-size: 30rpx;
}
.goodPicBox{
    padding: 30rpx 0 0 30rpx;
    height: 240rpx;
    width: 100%;
    white-space:nowrap;
    overflow-x: scroll;
    overflow-y: hidden;
}
.goodPicBox::-webkit-scrollbar{
    display: none;
}
.goodPic{
    width: 240rpx;
    height: 240rpx;
    background: #b4b4b4;
    margin-left:20rpx; 
}
.goodPic:nth-child(1){
    margin: 0
}
.goodPic:nth-last-child(1){
    margin-right: 60rpx;
}

.goodDet{
    margin: 30rpx 30rpx 0 30rpx;
    height: 70rpx;
    line-height: 70rpx;
    border-top: 1rpx solid rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size: 24rpx;
    color: #838383;
}
.likeIcon{
    width: 30rpx;
    height: 26rpx;
    padding-left: 30rpx;
}
.msgIcon{
    width: 30rpx;
    height: 26rpx;
}